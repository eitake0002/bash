Host *
  ForwardAgent yes

Host github
  HostName github.com
  IdentityFile ~/.ssh/id_rsa
  User git

Host gitpub
  HostName gitpub.com
  IdentityFile ~/.ssh/id_rsa
  User git

Host vag
  HostName 127.0.0.1
  User vagrant
  Port 2222
  UserKnownHostsFile /dev/null
  StrictHostKeyChecking no
  PasswordAuthentication no
  #IdentityFile "/Users/b-engineer-takeuchi/.ssh/id_rsa"
  IdentityFile "/Users/b-engineer-takeuchi/Vagrant/CentOS65/.vagrant/machines/default/virtualbox/private_key"
  IdentitiesOnly yes
  LogLevel FATAL

# EC2は社内IPと踏み台IPを許可しているので、以下のどちらかを設定

