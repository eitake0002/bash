# lusc接続設定
Host gate
 HostName ext-gate.kayac.com
 User b-engineer-takeuchi
 IdentityFile ~/.ssh/id_rsa.pub

Host lusc
  User bizadmin
  Hostname 52.193.61.116
  TCPKeepAlive yes
  ProxyCommand ssh gate nc %h %p 2> /dev/null
  PreferredAuthentications password
  ForwardAgent yes

Host lusc-local
  HostName 127.0.0.1
  User vagrant
  Port 2200
  UserKnownHostsFile /dev/null
  StrictHostKeyChecking no
  PasswordAuthentication no
  IdentityFile "/Users/b-engineer-takeuchi/Vagrant/lusc_vagrant/.vagrant/machines/default/virtualbox/private_key"
  IdentitiesOnly yes
  LogLevel FATAL

Host toshin-local
  HostName 127.0.0.1
  User vagrant
  Port 2201
  UserKnownHostsFile /dev/null
  StrictHostKeyChecking no
  PasswordAuthentication no
  IdentityFile "/Users/b-engineer-takeuchi/Vagrant/toshin/.vagrant/machines/default/virtualbox/private_key"
  IdentitiesOnly yes
  LogLevel FATAL

